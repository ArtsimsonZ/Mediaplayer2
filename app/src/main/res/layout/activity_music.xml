<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="37dp"
        android:text="Play music"
        android:onClick="onMusicPlay"/>

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/play"
        android:layout_alignRight="@+id/play"
        android:layout_below="@+id/play"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="24dp"
        android:text="Pause music"
        android:onClick="onMusicPause"/>

    <Button
        android:id="@+id/Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pause"
        android:layout_alignRight="@+id/pause"
        android:layout_below="@+id/pause"
        android:layout_marginTop="31dp"
        android:text="Stop music"
        android:onClick="onMusicStop"/>
</RelativeLayout>